############ BASE ############
FROM node:20-alpine AS base
RUN npm i -g pnpm
WORKDIR /app


############ PRUNE (TURBO) ############
FROM base AS pruner

# Copy root package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./

# Copy all workspace package.json files only
COPY apps ./apps
COPY packages ./packages

# Install deps so turbo can analyze pipeline
RUN pnpm install --frozen-lockfile

# Copy full repo
COPY . .

# Turbo prune only the client app (minimize files)
RUN npx turbo prune --scope=client --docker


############ INSTALL DEPS ############
FROM base AS builder

# Copy the pruned workspace (only what actually exists)
COPY --from=pruner /app/out/full/ ./

# Install dependencies WITHOUT frozen lockfile (lockfile missing in prune)
RUN pnpm install --no-frozen-lockfile


############ BUILD CLIENT ############
FROM builder AS client-builder

# Build the client app
RUN pnpm --filter client build


############ CLIENT RUNTIME ############
FROM nginx:alpine AS client

# Copy custom nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy built files
COPY --from=client-builder /app/apps/client/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
