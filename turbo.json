{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "node_modules/.prisma/**",
                "node_modules/@prisma/client/**"
            ]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "test": {},
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
