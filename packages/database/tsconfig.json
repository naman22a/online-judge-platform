{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
